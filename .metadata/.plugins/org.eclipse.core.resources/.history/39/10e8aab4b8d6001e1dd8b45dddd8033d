package estoque;
import calculo.soma;

import java.util.Locale;
import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		soma v;
		v = new soma();
		System.out.println("Enter product data: ");
		System.out.printf("Name: ");
		v.nome = sc.next();
		System.out.printf("Price: ");
		v.pricing = sc.nextDouble();
		System.out.printf("Quantity in stock: ");
		v.quantidade = sc.nextInt();
		double res = v.registro();
		System.out.println("Product data: " + v.nome + ", $ " + v.pricing + ", " + v.quantidade + " units, Total: $ " + res);
		System.out.printf("\nEnter the number of products to be added in stock: ");
		double addestoque = sc.nextDouble();
		res = v.adcestoque(addestoque);
		System.out.println("\nUpdated data: " + v.nome + ", $ " + v.pricing + ", " + v.quantidade + " units, Total: $ " + res);
		sc.close();
	}

}
