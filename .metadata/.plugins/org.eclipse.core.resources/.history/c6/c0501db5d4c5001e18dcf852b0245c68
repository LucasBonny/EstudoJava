		//EXERCICIO 2
		//area = pi .raio elevado a 2
		Locale.setDefault(Locale.US);
		double area, raio, pi = 3.14159;
		Scanner sc = new Scanner(System.in);
		raio = sc.nextDouble();
		area = pi * (Math.pow(raio, pi));
		System.out.printf("A=%.4f", area);
		sc.close();
	}

